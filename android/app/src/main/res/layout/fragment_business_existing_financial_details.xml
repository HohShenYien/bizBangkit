<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#E6E6E6"
    android:paddingHorizontal="3dp"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/businessFinancialCostLayout"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/businessFinancialCostArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/arrow_down_ic" />
        </LinearLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/businessFinancialCostExpandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:el_duration="400"
            app:el_expanded="true"
            tools:layout_editor_absoluteY="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/businessExistingFinancialCostUploadButton"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    style="?attr/materialButtonOutlinedStyle"
                    android:backgroundTint="@color/light_pink"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="2sp"
                    app:rippleColor="@color/pastel_purple"/>

                <GridLayout
                    android:id="@+id/businessExistingFinancialCostGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    grid:alignmentMode="alignBounds"
                    android:useDefaultMargins="true">

                </GridLayout>

            </LinearLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

        <LinearLayout
            android:id="@+id/business_detail_revenue_tab"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            tools:layout_editor_absoluteY="32dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revenue"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/business_detail_finance_chevron2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_down_ic"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout_revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000"
            app:el_expanded="false"
            tools:layout_editor_absoluteY="65dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00b300"
                android:clipToPadding="false"
                android:elevation="4dp"
                android:gravity="center"
                android:text="Fixed height"
                android:textColor="#fff" />

        </net.cachapa.expandablelayout.ExpandableLayout>

        <LinearLayout
            android:id="@+id/business_detail_income_tab"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            tools:layout_editor_absoluteY="65dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/business_detail_finance_chevron3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_down_ic"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandable_layout_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1000"
            app:el_expanded="false"
            tools:layout_editor_absoluteY="97dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00b300"
                android:clipToPadding="false"
                android:elevation="4dp"
                android:gravity="center"
                android:text="Fixed height"
                android:textColor="#fff" />

        </net.cachapa.expandablelayout.ExpandableLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
